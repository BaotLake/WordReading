/* pages/store/store.wxss */

.store-bg{
  position:fixed;
  width:100vw;
  height:100vh;
  background-color:#eee;
}

.navigationBar{
  width:100vw;
  height:60px;
  position:fixed;
  z-index:10;
  align-items:center;
  padding-top:20px;
  display:flex;
  /*background-color:#1c80ff;*/
  box-shadow:2px 0px 5px #888;
  color:#fff;
  background:linear-gradient(to right, #1c80ff, #05AFF2);
}
.nav-title{
  height:32px;
  line-height:32px;
  font-size:16px;
  margin-left:15px;
  transition:all 0.5s;
}
.nav-input{
  position:relative;
  height:32px;
  left:0px;
  width:128px;
  border-radius:16px;
  background-color:#fff;
  margin-left:20px;
  align-items:center;
  display:flex;
  transition:all 0.3s;
}
.nav-input-focus{
  width:220px;
  left:0px;
}
.nav-input-icon{
  height:18px;
  width:18px;
  margin-left:10px;
}
.input-clear{
  height:18px;
  width:18px;
  padding:10px;
}
.input{
  position:relative;
  height:30px;
  line-height:30px;
  width:calc(100% - 74px);
  margin-left:10px;
  font-size:12px;
  color:#555;
}

/**主页面*/
.store-page{
  /**navigation bar 占有高度*/
  padding-top:80px;
}
.store-swiper{
  width:100vw;
  height:calc(0.618 * 100vw);
}
.swiper-item{
  background-color:#fff;
}
.swiper-image{
  height:100%;
  width:100%;
}
.group-container{
  display:block;
  text-align:center;
}

.group-box{
  display:inline-block;
  position:relative;
  width:280rpx;
  height:170rpx;
  border-radius:5px;
  margin:20px 10px;
  overflow:hidden;
  box-shadow:0 0 5px rgba(0,0,0,0.3);
}
.group-box-bg{
  width:100%;
  height:100%;
}
.group-box-title{
  position:absolute;
  width:100%;
  height:32px;
  left:0;
  top:calc((100% - 32px) / 2);
  font-size:17px;
}


.book-detail-subpage{
  position:fixed;
  width:100vw;
  height:100vh;
  top:0;
  left:0;
}
.swiper{
  height:100%;
  width:100%;
}
.detail-swiper{
  position:absolute;
  height:970rpx;
  width:600rpx;
  margin:0 15rpx;
  background-color:#fff;
  bottom:50rpx;
  border-radius:5px;
  overflow:hidden;
  box-shadow:2px 2px 10px rgba(0,0,0,0.08);
}
.detail-image{
  position:absolute;
  width:100%;
  height:100%;
}


/** swiper card*/
.card-title{
  position:relative;
  display:block;
  font-size:32px;
  padding:20px 0 5px 20px;
}
.card-list{
  position:relative;
  height:90px;
  margin:20px 20px;
  border-radius:10px;
  display:flex;
  align-items:center;
}

.card-item-bg{
  width:100%;
  height:100%;
}



.swiper-icon-view{
  display:inline-block;
  width:50px;
  height:70px;
  padding:10px;
  text-align:center;
  color:#333;
  font-size:12px;
  line-height:20px;

  margin:0 15px;
}
.swiper-icon-i{
  width:50px;
  height:50px;
  border-radius:25px;
  background-color:#eee;
}

.swiper-title{
  font-size:24px;
  margin-bottom:20px;
}

.icon-container{
  position:relative;
  display:block;
  top:100px;
  padding:20px;
  text-align:center;
}